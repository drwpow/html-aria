{
  "name": "html-aria",
  "description": "Utilities for creating accessible HTML based on the latest ARIA 1.3 specs. Lightweight, performant, tree-shakeable, and 0 dependencies.",
  "version": "0.1.2",
  "type": "module",
  "license": "MIT",
  "keywords": [
    "a11y",
    "accessibility",
    "aria",
    "react",
    "1.3",
    "aria-query",
    "jsx-a11y",
    "wai-aria"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/drwpow/html-aria.git"
  },
  "main": "./dist/index.js",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.cjs"
      },
      "default": "./dist/index.js"
    },
    "./*": "./dist/*.js",
    "./package.json": "./package.json"
  },
  "author": {
    "name": "Drew Powers",
    "email": "drew@pow.rs"
  },
  "scripts": {
    "benchmark": "vitest bench",
    "build": "rollup -c",
    "format": "biome format . --write",
    "lint": "biome check .",
    "test": "vitest run",
    "version": "pnpm run build && changeset version"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.11",
    "@rollup/plugin-commonjs": "^28.0.2",
    "@rollup/plugin-typescript": "^12.1.2",
    "@types/aria-query": "^5.0.4",
    "aria-query": "^5.3.2",
    "jsdom": "^25.0.1",
    "rollup": "^4.30.0",
    "rollup-plugin-cleandir": "^3.0.0",
    "tslib": "^2.8.1",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
