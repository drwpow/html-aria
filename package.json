{
  "name": "html-aria",
  "description": "WAI-ARIA utilities for HTML based on ARIA 1.3 and the latest recommendations",
  "version": "0.0.4",
  "type": "module",
  "license": "MIT",
  "keywords": ["a11y", "accessibility", "aria", "1.3", "wai-aria"],
  "repository": {
    "type": "git",
    "url": "https://github.com/drwpow/html-aria"
  },
  "main": "./dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./*": "./dist/*.js",
    "./package.json": "./package.json"
  },
  "author": {
    "name": "Drew Powers",
    "email": "drew@pow.rs"
  },
  "scripts": {
    "benchmark": "vitest bench",
    "build": "rollup -c",
    "format": "biome format . --write",
    "lint": "biome check .",
    "test": "vitest run"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.11",
    "@rollup/plugin-commonjs": "^28.0.2",
    "@rollup/plugin-typescript": "^12.1.2",
    "@types/aria-query": "^5.0.4",
    "aria-query": "^5.3.2",
    "jsdom": "^25.0.1",
    "rollup": "^4.29.1",
    "rollup-plugin-cleandir": "^3.0.0",
    "tslib": "^2.8.1",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
