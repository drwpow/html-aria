{
  "compilerOptions": {
    "declaration": true,
    "lib": ["DOM", "ESNext"],
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "noFallthroughCasesInSwitch": true,
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "target": "ESNext",
    "noUncheckedIndexedAccess": true
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}
